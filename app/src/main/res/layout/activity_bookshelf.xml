<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.BookshelfActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_bookshelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Bookshelf"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <SearchView
            android:id="@+id/searchBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="18dp"
            android:background="@drawable/search_background"
            android:queryHint="Search Book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_bookshelf" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_bookshelf_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchBook"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp">
                <ImageView
                    android:id="@+id/iv_book_cover"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/sapiens"
                    android:padding="2dp" />
                <TextView
                    android:id="@+id/tv_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv_book_cover"
                    android:text="Sapiens"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_book_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_book_cover"
                    android:text="Yuval Noah Harari"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_start_reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/read_button"
                    android:layout_below="@+id/tv_book_author"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="12dp"
                    android:text="Continue Reading"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_book_cover"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/rounded_shape_14"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            android:layout_margin="8dp"
            >

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_pink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivFav"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/ivFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart"
                app:layout_constraintStart_toEndOf="@id/ivHome"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivNotif"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/ivNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notif_bell"
                app:layout_constraintStart_toEndOf="@id/ivFav"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivProfile"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"
                app:layout_constraintStart_toEndOf="@id/ivNotif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>